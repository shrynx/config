[alias]
    st = status -s
    cl = clone
    co = checkout
    cb = checkout -b
    aa = add .
    cm = commit -m
    ca = commit --amend
    p = push
    pf = push --force
    ri = rebase -i
    ir = "!f() { git rebase -i HEAD~$1; }; f"
    rt = "!f() { git reset --soft HEAD~$1; }; f"
    cp = cherry-pick
    lg = log --graph --pretty=format:'%C(bold red)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(yellow)%ad%Creset %C(bold blue)<%an>%Creset' --abbrev-commit --date=human --decorate=full --all
    lf = lg -p
    lc = log -p --name-only --pretty=oneline --abbrev-commit --date=human
    diff = diff --word-diff
    empty = "!git commit -am\"make it so\" --allow-empty"
    undo = "!f() { git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}}; }; f"
    ws = "!f() { branch=\"${1:-HEAD}\"; base=\"${2:-main}\"; for c in $(git rev-list --reverse \"$base..$branch\"); do git checkout \"$c\" && echo \"üîç Commit $c\" && read -p \"Next...\"; done; echo \"üîÅ Returning to $branch\"; git checkout \"$branch\"; }; f"
    walk = "!f() { orig=$(git symbolic-ref --short HEAD); branch=\"${1:-$orig}\"; base=\"${2:-main}\"; tmp=\"walk-temp-$$\"; git checkout -b \"$tmp\" \"$branch\" && for c in $(git rev-list --reverse \"$base..$tmp\"); do git checkout \"$c\" && msg=$(git log -1 --pretty=%B) && git reset --soft HEAD~1 && echo \"üîç Commit $c (soft reset)\" && read -p \"Next (will re-commit)...\" && git commit --reuse-message=HEAD@{1}; done; echo \"üîÅ Returning to $orig\" && git checkout \"$orig\" && git branch -D \"$tmp\"; }; f"

[advice]
    detachedHead = false

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = red reverse
    local = blue
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red bold
    new = green
    plain = white

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[column]
    ui = auto

[branch]
    sort = -committerdate

[tag]
    sort = version:refname
    forceSignAnnotated = false

[init]
    defaultBranch = main

[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true

[push]
    default = simple
    autoSetupRemote = true
    followTags = true

[fetch]
    prune = true
    pruneTags = true
    all = true

[help]
    autocorrect = prompt

[commit]
    verbose = true
    gpgSign = true

[rerere]
    enabled = true
    autoupdate = true

[core]
    excludesfile = ~/.gitignore
    editor = nvim -f

[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true

[gpg]
    format = ssh
    program = /usr/bin/ssh-keygen

[gpg "ssh"]
    program = /usr/bin/ssh-keygen
    allowedSignersFile = ~/.ssh/allowed_signers

[include]
    path = ~/.personal.gitconfig

[includeIf "gitdir:~/Work/"]
    path = ~/.work.gitconfig
